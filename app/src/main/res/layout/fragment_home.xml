<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_fragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_toolbar"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="22dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="?attr/actionBarSize"
                    android:src="@drawable/buy"
                    android:id="@+id/imgSumOrder"
                    android:paddingRight="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tvOrder" />
            </RelativeLayout>
        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_image_shop_name"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/load_image"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!--<RatingBar-->
                    <!--android:layout_marginLeft="12dp"-->
                    <!--android:id="@+id/ratingBar"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:numStars="5"-->
                    <!--android:stepSize="1.0"-->
                    <!--android:isIndicator="true"-->
                    <!--android:theme="@style/RatingBar" />-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp">

                        <ImageView
                            android:id="@+id/img_star1"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/star_review"/>
                        <ImageView
                            android:id="@+id/img_star2"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/star_review"/>

                        <ImageView
                            android:id="@+id/img_star3"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/star_review" />

                        <ImageView
                            android:id="@+id/img_star4"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/star_review"/>
                        <ImageView
                            android:id="@+id/img_star5"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/star_review"/>

                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></FrameLayout>

                    <ImageView
                        android:layout_marginRight="12dp"
                        android:id="@+id/bt_status_shop"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/status_open"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp">
                    <!--<ImageView-->
                    <!--android:layout_marginLeft="12dp"-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:src="@drawable/coin_full"/>-->
                    <!--<TextView-->
                    <!--android:layout_marginLeft="12dp"-->
                    <!--android:id="@+id/tvCoin"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="10-20$"-->
                    <!--android:textSize="18dp"-->
                    <!--android:textStyle="bold"/>-->

                    <FrameLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:paddingRight="12dp"
                            android:layout_gravity="center"
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="Upcoming_Close : 11:59 PM"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/coin"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$10-20"
                                android:padding="12dp"
                                android:textColor="@color/white"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            tools:context="com.revenue_express.citythai.MapsActivity" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/titleAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="address"
                        android:textColor="#333"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="Address"
                        android:textColor="#333"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/titleTel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="phone"
                        android:layout_marginLeft="8dp"
                        android:textColor="#333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tel"
                        android:layout_marginLeft="8dp"
                        android:textColor="#333"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/txtDetail"
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detail"
                        android:layout_marginLeft="8dp"
                        android:textColor="#333"
                        android:textSize="13sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/titleTimeshop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="hours"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txtTimeshop"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:flipInterval="2000"
            android:autoStart="true"/>


    </LinearLayout>
    </ScrollView>
</LinearLayout>
