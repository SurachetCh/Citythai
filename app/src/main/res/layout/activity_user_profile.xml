<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:src="@drawable/iconback"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_toolbar"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile"
                    android:textSize="22dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_img"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:background="@color/colorPrimary">
                <cn.carbs.android.avatarimageview.library.AvatarImageView
                    android:id="@+id/fa_upload_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    app:aiv_BoarderWidth="2dp"
                    app:aiv_ShowBoarder="false"
                    app:aiv_TextSizeRatio="0.4"
                    android:src="@drawable/camera"/>
                    <cn.carbs.android.avatarimageview.library.AvatarImageView
                        android:id="@+id/header"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        app:aiv_BoarderWidth="2dp"
                        app:aiv_ShowBoarder="false"
                        app:aiv_TextSizeRatio="0.4"
                        android:src="@drawable/male"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical"
                    card_view:cardBackgroundColor="@android:color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp">
                            <TextView
                                android:id="@+id/tv_display_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Profile"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:id="@+id/tv_display_profile_name"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="Display Name"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"/>
                            <EditText
                                android:id="@+id/txtMemh_display"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_white_border_black"
                                android:textSize="@dimen/abc_text_size_subhead_material"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:id="@+id/tv_display_firstname"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="Firstname"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"/>
                            <EditText
                                android:id="@+id/txtMemh_firstname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_white_border_black"
                                android:textSize="@dimen/abc_text_size_subhead_material"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:id="@+id/tv_display_lastname"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="Lastname"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"/>
                            <EditText
                                android:id="@+id/txtMemh_lastname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_white_border_black"
                                android:textSize="@dimen/abc_text_size_subhead_material"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:id="@+id/tv_display_email"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="Email"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"/>
                            <EditText
                                android:id="@+id/txtMemh_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_white_border_black"
                                android:textSize="@dimen/abc_text_size_subhead_material"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:id="@+id/tv_display_gender"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="Gender"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"/>
                            <RadioGroup
                                android:orientation="horizontal"
                                android:id="@+id/rdg_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <RadioButton
                                    android:id="@+id/rdb_male"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/male"
                                    android:textColor="@color/black"/>
                                <RadioButton
                                    android:id="@+id/rdb_female"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/female"
                                    android:textColor="@color/black"/>
                            </RadioGroup>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnSaveInfo"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="200dp"
                            android:layout_height="35dp"
                            android:text="@string/confirm"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:background="@color/pink"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/change_password_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="@dimen/cardview_default_elevation">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp">
                            <TextView
                                android:id="@+id/tv_display_changepassword"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Change Password"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:id="@+id/tv_display_oldpassword"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="Old password"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"/>
                            <EditText
                                android:id="@+id/edtOldPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_white_border_black"
                                android:textSize="@dimen/abc_text_size_subhead_material"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:id="@+id/tv_display_newpassword"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="New password"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"/>
                            <EditText
                                android:id="@+id/edtNewPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_white_border_black"
                                android:textSize="@dimen/abc_text_size_subhead_material"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:id="@+id/tv_display_confirmpassword"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="Confirm Password"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"/>
                            <EditText
                                android:id="@+id/edtNewConPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_white_border_black"
                                android:textSize="@dimen/abc_text_size_subhead_material"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnSavePassword"
                            android:layout_width="200dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="35dp"
                            android:text="@string/confirm"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:background="@color/pink"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
